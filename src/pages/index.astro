---
import { fade, slide } from "astro:transitions";
import FullWidthText from "../components/FullWidthText.tsx";
import HoverableText from "../components/HoverableText.tsx";
import Wrapper from "../layouts/wrapper.astro";
---

<Wrapper transition:animate={fade({ duration: "5s" })}>
	<div class="chunk flex flex-col jusitfy-center items-center">
		<FullWidthText text="KARTHIK NOOLI" client:only />
		<div
			class="gap-4 text-2xl flex flex-col flex-wrap justify-between items-start gap-x-4 w-full px-1 lg:px-4 md:-mt-3"
		>
			<p class="D1">20/04/2001 - PRESENT</p>
			<div class="flex flex-col flex-wrap gap-x-4 h-fit group">
				<p class="D1">DESIGN ENGINEER / DEVELOPER</p>
				<div
					class="flex flex-col flex-wrap gap-x-4 h-fit group D1 mt-4 md:mt-0 mx-2 md:mx-0"
				>
					<div
						class="w-0.5 min-h-full bg-bone rounded-lg group-hover:opacity-100 transition-all opacity-100 sm:opacity-0"
					>
					</div>
					<p
						class="group-hover:opacity-100 text-xs md:text-base transition-all opacity-100 sm:opacity-0 uppercase max-w-xl"
					>
						A Developer that happens to know how to design. One that
						doesn't just want to <span
							class="font-bold hover:text-pink transition-all"
							>develop</span
						> designs, but also wants to <span
							class="font-bold hover:text-blue transition-all"
							>design</span
						>
						them.
					</p>
				</div>
			</div>
		</div>
	</div>
	<div class="flex flex-col gap-y-4 p-4 fixed bottom-0 left-0">
		<HoverableText
			text="PROJECTS"
			client:load
			link="projects"
			className="text-xl md:text-4xl"
			transition:name="projects"
		/>
		<HoverableText
			text="PHOTOGRAPHY"
			client:load
			link="photography"
			className="text-xl md:text-4xl"
		/>
		<HoverableText
			text="CV"
			client:load
			link="https://drive.google.com/file/d/1gVIM-oFDBUT8GHHx6eNYWJpBCpjRDW4d/view?usp=drive_link"
			className="text-4xl"
		/>
	</div>
</Wrapper>
